<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="com.table6.fragment.ControlTemperatureFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/controlTemperatureGroup">

            <RadioButton
                android:id="@+id/controlTemperatureGroupWarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Warm"/>

            <RadioButton
                android:id="@+id/controlTemperatureGroupLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Low" />

            <RadioButton
                android:id="@+id/controlTemperatureGroupHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="High" />

        </RadioGroup>

    </LinearLayout>

</FrameLayout>
